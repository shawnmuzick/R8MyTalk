{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": [
      "./Public/assets/js/*.min.*",
      "./Public/assets/js/main.js",
      "./Public/assets/js/util.js",
      "./coverage/*"
    ]
  },
  "formatter": {
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 80,
    "ignore": [
      "./Public/assets/js/*.min.*",
      "./Public/assets/js/main.js",
      "./Public/assets/js/util.js",
      "./coverage/*"
    ]
  }
}
