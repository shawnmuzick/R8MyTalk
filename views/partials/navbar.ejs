  <h1 id="logo">
    <a href="../homePage">
      <span>R</span>
      <span>8</span>
      <span>M</span>
      <span>y</span>
      <span>T</span>
      <span>A</span>
      <span>L</span>
      <span>K</span>
    </a>
  </h1>

  <nav id="nav" class="homepage-li">
    <ul style="display: flex">
      <li><a href="/homePage">Home</a></li>
      <li><a href="/speakerSearch">Speaker Search</a></li>

      <% if (user) { %>
      <li><a href="/contacts">My Leads</a></li>
      <li>
        <%if(user.profile.profilePictureUrl == " " || user.profile.profilePictureUrl == "" ||
        user.profile.profilePictureUrl == undefined){ %>
        <img
          style="margin-top: 5px; border-radius: 50%; width: 50px; height: 50px"
          src="/images/placeHolderProfilePicture.png"
        />
        <% } else { %>
        <img
          style="margin-top: 5px; border-radius: 50%; width: 50px; height: 50px"
          src="<%= user.profile.profilePictureUrl%>"
        />
        <% } %>
        <ul>
          <li><a href="/profilePage">Events Dashboard</a></li>
          <li><a href="/speakerProfile/edit/<%=user.uid%>">Edit My Profile</a></li>
          <li><a href="/logout" name="logout">Logout</a></li>
        </ul>
      </li>
      <% } else { %>
      <li><a href="/login" class="button primary">Log In</a></li>
      <% } %>
    </ul>
  </nav>
</header>
