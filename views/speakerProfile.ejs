<!DOCTYPE html>
<html class="black-placeholder" lang="en">
  <head>
    <%-include('partials/meta',{ pageTitle:`${profile.firstName} ${profile.lastName}'s Profile`}) %>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <%- include('partials/styles') %>
    <link rel="stylesheet" href="/assets/css/speakerstyles.css" />
  </head>

  <body class="is-preload">
    <div id="page-wrapper">
      <%- include('partials/navbar') %>

      <!-- Main -->
      <div id="main" class="wrapper style1">
        <div class="container">
          <header class="major">
            <p class="display-4"><%= profile.firstName %> <%= profile.lastName %></p>
          </header>
        </div>

        <section>
          <div class="container">
            <div class="profile-content">
              <div class="profile-bio">
                <h2>Bio</h2>
                <p class="lead"><%= profile.bio || 'No bio available' %></p>
              </div>
            </div>
          </div>
        </section>

        <section>
          <div class="container">
            <div class="profile-social">
              <h3>Social Links</h3>
              <ul>
                <% if (profile.socialLink1) { %> <%-
                include('partials/socialLink',{socialLink:profile.socialLink1}) %> <% } %> <% if
                (profile.socialLink2) { %> <%-
                include('partials/socialLink',{socialLink:profile.socialLink2}) %> <% } %> <% if
                (profile.socialLink3) { %> <%-
                include('partials/socialLink',{socialLink:profile.socialLink3}) %> <% } %>
              </ul>
            </div>
          </div>
        </section>
        <a href="/speakerSearch" id="returnToSearchBtn" class="btn btn-light"
          >Back to Search Results</a
        >
      </div>

      <%-include('partials/footer') %>
    </div>
    <%-include('partials/scripts') %>
    <script src="/assets/js/speakerProfileHandler.js"></script>
  </body>
</html>
